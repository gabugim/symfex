{# templates/category/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Catégory {% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            {{ dump() }}
            {{ category.0.name }}
            {% for program in programs %}
                {% if (loop.index < 4) %}
                <div>
                    <h2> {{  loop.index }} / {{ program.title }} - Categorie : {{ program.category.name }} {{ program.id }}</h2>
                    <p>{{ program.summary }}</p>
                    {# Lien vers la fiche de la série : #}
                    <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
                </div>
                {% endif %}
            {% else %}
                Aucune série de trouvée.
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_new') }}">
        ajouter un program
    </a>
    <br>

    <a href="{{ path('category_index') }}">
        Retour à la liste des categories
    </a>

{% endblock %}